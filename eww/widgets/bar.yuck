(include "widgets/date.yuck")
(include "widgets/time.yuck")

(defwindow bar
    :class "bar"
    :monitor 0
    :geometry (geometry :x "0px"
                       :y "0px"
                       :width "100%"
                       :anchor "top center")
    :stacking "fg"
    :reserve (struts :distance "40px" :side "top")
    :windowtype "dock"
    :wm-ignore false
    (box :class "bar-inside"
      (centerbox :orientation "horizontal" 
        (box :class "bar-part"
            :halign "start"
        )
        (time)
        (box :class "bar-part"
            :halign "end"
          (roundbutton :icon "ó°…™")
        )
      )
    )
  )
  
  (defwidget roundbutton [?icon]
    (box :class "roundbutton"
         :width "20px"
      icon
    )
  )